#!/usr/bin/env ppackage

from panda3d.core import loadPrcFile

class isisworld(p3d):
    # Metadata of the package
    config(display_name = "IsisWorld")
    require("morepy")
    require("panda3d")
    require("fmod")
    require("ode")

    # Add the data and configuration files
    loadPrcFile("config.prc")
    dir("media", "media")
    dir("simulator", "simulator")
    file("config.prc")
    file("kitchen.isis")

    # Pull in the python files
    file("main.py")
    mainModule("main")

